<body>
  <div class="wrap">
    <div class="card" role="application" aria-label="Breath Holding Test">
      <h1>Breath Holding Test</h1>
      <p>Tap <b>Start</b>, take a deep breath, then hold until you feel comfortable. Tap <b>Stop</b>.</p>

      <div class="timer" aria-live="polite">
        <div class="secs" id="secs">0</div>
        <div class="unit">s</div>
      </div>

      <div class="status" id="status">Ready</div>

      <div class="btns">
        <button class="start" id="startBtn">Start</button>
        <button class="stop"  id="stopBtn" disabled>Stop</button>
        <button class="reset" id="resetBtn">Reset</button>
        <button class="share" id="shareBtn" disabled>Copy Result</button>
      </div>

      <div class="result" id="result"></div>

      <div class="fineprint">
        <b>Safety note:</b> Don‚Äôt do breath-holds in water or while driving. Sit down. Stop immediately if dizzy.
        This is for awareness/entertainment and not medical advice.
      </div>
    </div>
  </div>

  <script>
    // State
    let startTimeMs = null;
    let elapsedMs = 0;
    let rafId = null;
    let running = false;

    const secsEl   = document.getElementById('secs');
    const statusEl = document.getElementById('status');
    const resultEl = document.getElementById('result');

    const startBtn = document.getElementById('startBtn');
    const stopBtn  = document.getElementById('stopBtn');
    const resetBtn = document.getElementById('resetBtn');
    const shareBtn = document.getElementById('shareBtn');

    function formatSeconds(ms) {
      return Math.floor(ms / 1000);
    }

    // Optional: simple ‚Äúbucket‚Äù messaging (tweak or remove)
    // Example wording adapted from common online breath-hold articles; don‚Äôt claim diagnosis.
    function bucketize(seconds) {
      if (seconds < 20) return "Low (practice breathing & lifestyle basics)";
      if (seconds < 40) return "Average";
      return "Strong";
    }

    function tick(now) {
      if (!running) return;
      elapsedMs = now - startTimeMs;
      secsEl.textContent = formatSeconds(elapsedMs);
      rafId = requestAnimationFrame(tick);
    }

    function setUiState() {
      startBtn.disabled = running;
      stopBtn.disabled  = !running;
      shareBtn.disabled = running || formatSeconds(elapsedMs) === 0;
    }

    startBtn.addEventListener('click', () => {
      running = true;
      startTimeMs = performance.now() - elapsedMs; // allows resume if you ever add it
      statusEl.textContent = "Inhale‚Ä¶ hold";
      resultEl.textContent = "";
      setUiState();
      rafId = requestAnimationFrame(tick);
    });

    stopBtn.addEventListener('click', () => {
      running = false;
      cancelAnimationFrame(rafId);
      const s = formatSeconds(elapsedMs);
      statusEl.textContent = "Stopped";
      resultEl.innerHTML = `Your time: <b>${s}s</b><div class="pill">${bucketize(s)}</div>`;
      setUiState();
    });

    resetBtn.addEventListener('click', () => {
      running = false;
      cancelAnimationFrame(rafId);
      startTimeMs = null;
      elapsedMs = 0;
      secsEl.textContent = "0";
      statusEl.textContent = "Ready";
      resultEl.textContent = "";
      setUiState();
    });

    shareBtn.addEventListener('click', async () => {
      const s = formatSeconds(elapsedMs);
      const text = `I held my breath for ${s}s ü´Å Try it: (your link here)`;
      try {
        await navigator.clipboard.writeText(text);
        statusEl.textContent = "Copied to clipboard ‚úÖ";
        setTimeout(() => statusEl.textContent = "Ready", 1400);
      } catch {
        statusEl.textContent = "Copy failed (browser blocked)";
      }
    });

    setUiState();
  </script>
</body>
</html>
