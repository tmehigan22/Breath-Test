  <title>Breath Hold Test</title>
  <style>
    :root { --bg:#0b1220; --card:#111a2e; --text:#e8eefc; --muted:#b8c4e6; --accent:#46d3ff; }
    body { margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; background:var(--bg); color:var(--text); }
    .wrap { min-height:100svh; display:grid; place-items:center; padding:24px; }
    .card { width:min(560px, 100%); background:var(--card); border:1px solid rgba(255,255,255,.08); border-radius:18px; padding:22px; box-shadow:0 12px 30px rgba(0,0,0,.35); }
    h1 { margin:0 0 6px; font-size:20px; letter-spacing:.2px; }
    p { margin:0 0 16px; color:var(--muted); line-height:1.4; }
    .timer { display:flex; align-items:baseline; gap:10px; justify-content:center; padding:18px 0 10px; }
    .secs { font-size:64px; font-weight:800; line-height:1; letter-spacing:-1px; }
    .unit { color:var(--muted); font-weight:700; }
    .status { text-align:center; color:var(--accent); font-weight:700; margin:6px 0 16px; min-height:22px; }
    .btns { display:flex; gap:10px; justify-content:center; flex-wrap:wrap; }
    button { border:0; border-radius:12px; padding:12px 16px; font-weight:800; cursor:pointer; }
    .start { background:var(--accent); color:#00131a; }
    .stop  { background:#ff5a7a; color:#1a0006; }
    .reset { background:#27324f; color:var(--text); border:1px solid rgba(255,255,255,.1); }
    .share { background:#19e28c; color:#001a0e; }
    .result { margin-top:14px; text-align:center; color:var(--muted); }
    .pill { display:inline-block; margin-top:8px; padding:8px 10px; border-radius:999px; border:1px solid rgba(255,255,255,.12); }
    .fineprint { margin-top:16px; font-size:12px; color:#9fb0da; opacity:.95; }
    a { color:var(--accent); text-decoration:none; }
    a:hover { text-decoration:underline; }
  </style>
